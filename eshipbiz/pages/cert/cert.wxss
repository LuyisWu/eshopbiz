/* pages/cert/cert.wxss */
.cert-form{
  margin: 0 20rpx;
}
.cert-img-wrapper{
  margin: 30rpx 0;
  border: 1rpx solid #dcdcdc;
  height: 710rpx;
}
.cert-img-outer{
  margin: 10rpx;
  background: #f5f5f5;
  height: 690rpx;
}
.cert-img-inner{
  text-align: center;
  padding-top: 273rpx;
}
.cert-img-icon{
  font-size: 80rpx;
  color: #dcdcdc;
}
.cert-img-title{
  font-size: 24rpx;
  color: #7d7d7d;
}
.cert-icon-right{
  line-height: 150rpx;
  font-size: 28rpx;
  vertical-align: top;
  padding-left: 20rpx;
  color: #505050;
}
.cert-text-icon{
  line-height: 90rpx;
  font-size: 28rpx;
  vertical-align: top;
  padding-left: 20rpx;
  color: #505050;
}
.cert-text{
  line-height: 90rpx;
  font-size: 28rpx;
  color: 505050;
  width:250rpx;
  overflow:hidden;
  display:inline-block;
  height:90rpx;
  text-align: right;
}
.enterprise-module{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  line-height: 90rpx;
  height: 90rpx;
  border-bottom: 1rpx solid #dcdcdc;
}
.cert-nav-left{
  justify-content: flex-start;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #000;
}
.cert-nav-right{
  justify-content: flex-end;
  padding-right: 20rpx;
  font-size: 28rpx;
  color: #505050;
}
.cert-inner{
  text-align: center;
}
.cert-img{
  background: #f5f5f5;
  margin: 0 auto;
  width: 300px;
  height: 710rpx;
}
.cert-button{
  margin: 40rpx 0 0;
  background: #fabf1b;
  font-size: 32rpx;
}