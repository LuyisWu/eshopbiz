/* pages/message/message.wxss */
page{
  background: #f5f5f5;
}
.message-item{
  margin: 20rpx 20rpx 0;
  background: #fff;
  padding: 30rpx 20rpx 40rpx;
}
.m-top{
  font-size: 28rpx;
  line-height: 28rpx;
  height:28rpx;
  overflow:hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
}
.m-middle{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.m-middle-left{
  justify-content: flex-start;
}
.m-bottom{
  margin-top: 30rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  height:24rpx;
  overflow:hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  color: #7d7d7d;
}
.read-flag{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #fabf1b;
  margin-right: 10rpx;
}
.no-messgae{
  padding-top: 300rpx;
  text-align: center;
  font-size: 32rpx;
  color: #505050;
}