/* pages/account/account.wxss */
page{
  background: #f5f5f5;
}
.account-bg{
  width: 100%;
  height: 300rpx;
  background-size: cover;
}
.account-bg-content{
  margin: 120rpx 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items:flex-end;
}
.head-img{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.account-sub-content{
  margin-left: 30rpx;
  margin-top: 50rpx;
  color: #fff;
}
.account-phone{
  font-size: 36rpx;
  line-height: 1;
  padding-bottom: 26rpx;
}
.account-name{
  font-size: 24rpx;
  line-height: 1;
}
.account-content{
  width: 100%;
}
.action-item{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top:4rpx;
  display: flex;
  background: #fff;
}
.action-bottom-item{
  margin-top: 18rpx;
  width: 100%;
  height: 90rpx;
  line-height:90rpx;
  background: #fff;
}
.action-bottom-title{
  font-size: 36rpx;
}
.action-bottom-icon{
  font-size: 36rpx;
  padding:0 32rpx 0 40rpx;
  color: #fd6b6b;
  width:50rpx;
  text-align:center;

}
.action-link{
  width: 100%;
  font-size: 30rpx;
  display: flex;
  background: #fff;
  justify-content: space-between;
}
.action-link-icon{
  font-size: 36rpx;
  line-height: 90rpx;
  padding:0 32rpx 0 40rpx;
  justify-content:flex-start;
  width:50rpx;
  text-align:center;

}
.action-link-right{
  color: #c8c8c8;
  justify-content:flex-end;
  font-size: 36rpx;
  line-height: 90rpx;
  padding-right: 40rpx;
}
.account-sub-wrapper{
  margin-left: 40rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  height: 130rpx;
  line-height: 130rpx;
}
.account-login{
  font-size: 30rpx;
  padding-right: 40rpx;
}
.account-line{
  height: 30rpx;
  width: 1rpx;
  background: #fff;
  margin-top:50rpx;
}
.account-sign{
  font-size: 30rpx;
  padding-left: 40rpx;
}
