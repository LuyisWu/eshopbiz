<!--pages/account/account.wxml-->
<view class='container'>
  <view class='account-bg' style='background: url(/images/banner1.png) center center no-repeat;'>
    <view class='account-bg-content' bindtap='navToInfo'>
      <image src='{{headImg}}' class='head-img'></image>
      <view class='account-sub-content'>
        <view class='account-phone'>{{phone}}</view>
        <view class='account-name'>{{enterpriseName}}</view>
      </view>
    </view>
  </view>
  <view class='account-content'>
    <block wx:for="{{actionList}}">
      <view class='action-item'>
        <navigator url="{{item.path}}" open-type="{{item.type}}" class='action-link'>
        <text class='action-link-title'><text class='action-link-icon {{item.icon}}' style='color:{{item.iconColor}}'></text>{{item.name}}</text>
        <text class='action-link-right icon-forward'></text>
        </navigator>
      </view>
      </block>
      <view class='action-bottom-item' bindtap='loginOut'>
        <text class='action-bottom-icon icon-logo'></text>
        <text class='action-bottom-title'>退出登录</text>
      </view>
  </view>
</view>
